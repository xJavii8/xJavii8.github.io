<script>
	// Manejo de errores de carga de imágenes
	document.addEventListener('DOMContentLoaded', function() {
		const techImages = document.querySelectorAll('.tech-icon img');
		
		techImages.forEach(img => {
			img.addEventListener('error', function() {
				// Crear un elemento de fallback
				const fallback = document.createElement('div');
				fallback.style.cssText = `
					width: 100%;
					height: 100%;
					display: flex;
					align-items: center;
					justify-content: center;
					font-size: 20px;
					color: var(--text-accent);
					background: rgba(255, 255, 255, 0.1);
					border-radius: 8px;
				`;
				
				// Obtener el nombre de la tecnología del alt o del texto siguiente
				const techName = this.alt || this.parentElement.nextElementSibling?.textContent || '🔧';
				
				// Mapeo de iconos de fallback
				const iconMap = {
					'Python': '🐍',
					'Java': '☕',
					'JavaScript': '🟨',
					'C++': '⚡',
					'Bash': '💻',
					'Go': '🔵',
					'Flask': '🌶️',
					'Django': '🎸',
					'Vue.js': '💚',
					'MongoDB': '🍃',
					'MySQL': '🐬',
					'Docker': '🐳',
					'Kubernetes': '⚓',
					'Linux': '🐧',
					'Jenkins': '👨‍🔧',
					'GitHub': '🐙',
					'GitLab': '🦊',
					'Postman': '📮',
					'Elasticsearch': '🔍',
					'InfluxDB': '📊'
				};
				
				fallback.textContent = iconMap[techName] || '🔧';
				
				// Reemplazar la imagen rota con el fallback
				this.style.display = 'none';
				this.parentElement.appendChild(fallback);
			});
			
			// Forzar recarga si la imagen no carga en 3 segundos
			setTimeout(() => {
				if (!img.complete || img.naturalHeight === 0) {
					img.dispatchEvent(new Event('error'));
				}
			}, 3000);
		});
	});
</script>