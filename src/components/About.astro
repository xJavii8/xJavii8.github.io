<style>
	.about-section {
		padding: 6rem 0;
		position: relative;
	}
	
	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}
	
	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		margin-bottom: 1rem;
	}
	
	.section-subtitle {
		font-size: 1.125rem;
		color: var(--text-secondary);
	}
	
	.about-content {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	
	.about-cards-container {
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: auto auto;
		gap: 2rem;
		max-width: 1400px;
		width: 100%;
	}
	
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-10px); }
	}
	
	@keyframes shimmer {
		0% { background-position: -200% 0; }
		100% { background-position: 200% 0; }
	}
	
	.journey-card {
		animation: float 6s ease-in-out infinite;
	}
	
	.skills-card {
		animation: float 6s ease-in-out infinite 3s;
	}
	
	.text-content {
		padding: 2rem;
	}
	
	.text-content h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		color: var(--text-accent);
	}
	
	.text-content p {
		margin-bottom: 1.5rem;
		color: var(--text-secondary);
		line-height: 1.7;
	}
	
	.interests-section {
		margin-top: 2rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}
	
	.soft-skills-section {
		margin-top: 2rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}
	
	.interests-section h4,
	.soft-skills-section h4 {
		font-size: 1.125rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: var(--text-primary);
		position: relative;
		padding-left: 1rem;
	}
	
	.interests-section h4::before,
	.soft-skills-section h4::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 4px;
		height: 20px;
		background: linear-gradient(135deg, var(--accent-color), #00a8cc);
		border-radius: 2px;
	}
	
	.interest-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		justify-content: center;
		margin-top: 1rem;
	}
	
	.tag {
		padding: 0.5rem 1rem;
		background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 168, 204, 0.1));
		border: 1px solid rgba(0, 212, 255, 0.2);
		border-radius: 20px;
		font-size: 0.875rem;
		color: var(--text-secondary);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}
	
	.tag::before {
		content: '';
		position: absolute;
		top: 0;
		left: -200%;
		width: 200%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
		transition: left 0.5s;
	}
	
	.tag:hover {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		border-color: transparent;
		transform: translateY(-2px) scale(1.05);
		box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
	}
	
	.tag:hover::before {
		left: 100%;
	}
	
	.about-card {
		background: rgba(255, 255, 255, 0.05);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 20px;
		padding: 2rem;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}
	
	.about-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
	}
	
	.about-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 40px rgba(0, 212, 255, 0.1);
		border-color: rgba(0, 212, 255, 0.3);
	}
	
	.card-icon {
		width: 60px;
		height: 60px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border-radius: 16px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
		color: white;
	}
	
	.about-card h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 2rem;
		color: var(--text-accent);
	}
	
	.skill-categories {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		margin-top: 1.5rem;
	}
	
	.skill-category h4 {
		font-size: 1.125rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: var(--text-primary);
		position: relative;
		padding-left: 1rem;
	}
	
	.skill-category h4::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 4px;
		height: 20px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border-radius: 2px;
	}
	
	.tech-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
		gap: 1.25rem;
		margin-top: 1rem;
	}
	
	.tech-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.25rem;
		border-radius: 14px;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.03), rgba(255, 255, 255, 0.08));
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
		font-size: 0.95rem;
		color: var(--text-secondary);
		position: relative;
		overflow: hidden;
	}
	
	.tech-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
